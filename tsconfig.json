{
    "compilerOptions": {
      "module": "esnext",
      "lib": ["esnext"],
      "target": "es2018",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules/*",
      "dist/*"
    ]
  }